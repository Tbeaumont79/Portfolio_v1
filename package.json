    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:portfolio": "node dist/portfolio/server/server.mjs",
    "dev:ssr": "npm run build && npm run serve:ssr:portfolio"
  },
  "private": true,
