{
  "name": "portfolio",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "prebuild": "node set-env.js",
    "build": "ng build --configuration production",
    "build:netlify": "ng build --configuration production && ng run portfolio:server:production && mkdir -p dist/portfolio/server && cp -f dist/portfolio/browser/fr/index.html dist/portfolio/server/index.server.html",
